{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Votre panier</h1>
    {% if cart.products is empty %}
        <p>Votre panier est vide</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Couleur</th>
                    <th>Quantit√©</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for cartProduct in cart.products %}
                    <tr>
                        <td>{{ cartProduct.product.title }}</td>
                        <td>{{ cartProduct.color }}</td>
                        <td>{{ cartProduct.quantity }}</td>
                        <td>{{ (cartProduct.product.price * cartProduct.quantity)|format_currency('EUR') }}</td>
                        <td>
                            <a href="{{ path('app_cart_remove', {id: cartProduct.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
