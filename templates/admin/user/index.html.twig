{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1>User index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Roles</th>
				<th>Password</th>
				<th>FirstName</th>
				<th>LastName</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					<td>{{ user.password }}</td>
					<td>{{ user.firstName }}</td>
					<td>{{ user.lastName }}</td>
					<td>
						<a href="{{ path('app_profile_show', {'id': user.id}) }}"><button class="btn btn-primary">Show</button> </a>
						<a href="{{ path('app_profile_edit', {'id': user.id}) }}"><button class="btn btn-warning">Edit</button> </a>
						<a href="{{ path('app_profile_edit_password', {'id': user.id}) }}"><button class="btn btn-secondary">Edit password</button> </a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_admin_user_new') }}">Create new</a>
{% endblock %}
