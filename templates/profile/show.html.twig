{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>User</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
			<tr>
				<th>FirstName</th>
				<td>{{ user.firstName }}</td>
			</tr>
			<tr>
				<th>LastName</th>
				<td>{{ user.lastName }}</td>
			</tr>
		</tbody>
	</table>

	{% if is_granted("ROLE_ADMIN") %}
		<a href="{{ path('app_admin_user_index') }}"><button class="btn btn-primary">Back to list</button> </a>
	{% endif %}

	<a href="{{ path('app_profile_edit')}}"><button class="btn btn-warning">Edit</button> </a>
	<a href="{{ path('app_profile_edit_password')}}"><button class="btn btn-secondary">Edit password</button> </a>

	{{ include('profile/_delete_form.html.twig') }}
{% endblock %}
